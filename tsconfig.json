{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["@tsconfig/strictest/tsconfig.json"],
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],

		// ビルド設定
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
